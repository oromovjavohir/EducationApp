<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    android:background="@drawable/bg_6"
    >

    <ImageView
        android:id="@+id/image"
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:src="@drawable/add_image1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="24dp"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/containerGroupName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        app:endIconMode="clear_text"
        app:layout_constraintTop_toBottomOf="@id/image"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputGroupName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nomi"
            android:maxLength="15"
            android:maxLines="1"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/containerGroupSize"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginHorizontal="24dp"
        app:endIconMode="clear_text"
        app:layout_constraintTop_toBottomOf="@id/containerGroupName"
        android:layout_marginTop="18dp"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputGroupSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Soni"
            android:maxLength="15"
            android:maxLines="1"
            android:inputType="number"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnAddGroup"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/containerGroupSize"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/bg_4"
        android:layout_marginHorizontal="24dp"
        android:text="Qo'shish"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:layout_marginBottom="48dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>